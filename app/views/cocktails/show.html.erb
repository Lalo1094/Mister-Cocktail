<h2><%= @cocktail.name %></h2>
<h3> "Doses" </h3>
<ul class="list-group">
  <% @cocktail.doses.each do |dose| %>
    <li class="list-group-item"><%= dose.ingredient.name %> ⇰ <%= dose.description %></li>
    <%= link_to "Delete #{dose.ingredient.name}", dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } %>
  <% end %>
</ul>
